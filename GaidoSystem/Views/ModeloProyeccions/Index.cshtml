            <td>
                @Html.DisplayFor(modelItem => item.ModVentasNetas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModCostosVentas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModGastosAdmin)
