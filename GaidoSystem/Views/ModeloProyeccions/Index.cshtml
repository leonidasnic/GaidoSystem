            <th>
                @Html.DisplayNameFor(model => model.ModVentasNetas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModCostosVentas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModGastosAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModGastosVentas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModGastosOperativos)
            </th>
