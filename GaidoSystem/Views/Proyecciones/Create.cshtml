            </tr>
            <tr>
                <td colspan="3" class="text-center">Utilidad</td>
            </tr>
            <tr>
                <td>@ER.Utilidad</td>
                <td class="bg-danger" contenteditable="true">@Html.DisplayFor(a => a.ModUtilidad)<label> %</label></td>
