<script>
    var VentasNetas = 0;
    function add(Tipo) {
        if (Tipo == "Ventas") {
            VentasNetas = parseInt(document.getElementById("txtVentas").value);
            drop("txtVentas");
            document.getElementById("intVentas").innerHTML = VentasNetas;
            document.getElementById("proVentas").style.width = document.getElementById("proVentas").innerHTML = "100%";
            update();
        }
        else if (Tipo == "CostoVentas") {
            var CostoVentas = parseInt(document.getElementById("txtCostoVentas").value);
            drop("txtCostoVentas");
            document.getElementById("intCostoVentas").innerHTML = CostoVentas;
            document.getElementById("proCostoVentas").style.width = document.getElementById("proCostoVentas").innerHTML = calPorcentaje(CostoVentas);
        }
        else if (Tipo == "GastosAdmin") {
             var GastosAdmin = parseInt(document.getElementById("txtGastosAdmin").value);
            drop("txtGastosAdmin");
            document.getElementById("intGastosAdmin").innerHTML = GastosAdmin;
            document.getElementById("proGastosAdmin").style.width = document.getElementById("proGastosAdmin").innerHTML = calPorcentaje(GastosAdmin);
        }
    };
    
    function update() {
        if (document.getElementById("txtCostoVentas").value != "") {
            drop("txtCostoVentas");
            add("CostoVentas");
        };
        if (document.getElementById("txtGastosAdmin").value != "") {
            drop("txtGastosAdmin");
            add("GastosAdmin");
        }
    };

        function calPorcentaje(num = 0) {
            if (VentasNetas == 0) {
                document.getElementById("txtVentas").value = prompt("ingrese Ventas Netas:", "");
                add("Ventas");
            }
            var total = ((num * 100) / VentasNetas);
            return (total+"%");
        };

        function drop(txtobj) {
            if (document.getElementById(txtobj).readOnly == false) {
                document.getElementById(txtobj).readOnly = true;
            }
            else {
                document.getElementById(txtobj).readOnly = false;
            }
    };
       /* alert(document.getElementById("Ventas").value)*/
    
</script>
