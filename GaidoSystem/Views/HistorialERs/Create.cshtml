@model GaidoSystem.Models.HistorialER

@{
    ViewData["Title"] = "Create";
}
    <style>
        .form-group,h2{
            color:black;
        }
        td{
            margin-bottom:10%;
            margin-top:10%;
        }
    </style>

    <h2>Ingresar</h2>
<div class="row">
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="VentasNetas" class="control-label"></label>
                <input asp-for="VentasNetas" class="form-control" id="Ventas"/>
                <span asp-validation-for="VentasNetas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostosVentas" class="control-label"></label>
                <input asp-for="CostosVentas" class="form-control" />
                <span asp-validation-for="CostosVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GastosAdmin" class="control-label"></label>
                <input asp-for="GastosAdmin" class="form-control" />
                <span asp-validation-for="GastosAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GastosVentas" class="control-label"></label>
                <input asp-for="GastosVentas" class="form-control" />
                <span asp-validation-for="GastosVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GastosOperativos" class="control-label"></label>
                <input asp-for="GastosOperativos" class="form-control" />
                <span asp-validation-for="GastosOperativos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtrosGastos" class="control-label"></label>
                <input asp-for="OtrosGastos" class="form-control" />
                <span asp-validation-for="OtrosGastos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-7">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Concepto</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Porcentaje</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ventas</td>
                    <td>100</td>
                    <td class="progress-bar bg-info" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">100%</td>
                </tr>
                <tr>
                    <td>Costos de Ventas</td>
                    <td>1</td>
                    <td class="progress-bar bg-danger" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">-1%</td>
                </tr>
                <tr>
                    <td>Gastos de admin</td>
                    <td>1</td>
                    <td class="progress-bar bg-danger" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">-1%</td>
                </tr>
                <tr>
                    <td>Gastos de Ventas</td>
                    <td>1</td>
                    <td class="progress-bar bg-danger" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">-1%</td>
                </tr>
                <tr>
                    <td>Gastos de Operacion</td>
                    <td>1</td>
                    <td class="progress-bar bg-danger" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">-1%</td>
                </tr>
                <tr>
                    <td>Otros Gastos</td>
                    <td>1</td>
                    <td class="progress-bar bg-danger" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">-1%</td>
                </tr>
                <tr>
                    <td>Utilidad</td>
                    <td>50</td>
                    <td class="progress-bar bg-warning" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">50%</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
